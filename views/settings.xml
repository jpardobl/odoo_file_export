<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_google_drive_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.extract</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base_setup.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <div name='auth_ldap_right_pane' position="after">
                <div class="content-group">
                    <div class="mt8 row">
                        <div class="col-sm">


                            <div class="row mt16" id="google_drive_client_id">
                                <label for="google_drive_client_id" class="col-lg-3 o_light_label"/>
                                <field name="google_drive_client_id"/>
                            </div>
                            <div class="row mt16" id="google_drive_client_secret">
                                <label for="google_drive_client_secret" class="col-lg-3 o_light_label"/>
                                <field name="google_drive_client_secret"/>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </field>
    </record>
</odoo>
